---
// Header con Navbar y Video de fondo
// Los videos deben estar en la carpeta public/videos/
---

<header class="relative h-screen">
  <!-- Navbar Transparente -->
  <nav
    id="navbar"
    class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16 md:h-20">
        <!-- Logo -->
        <div class="flex items-center">
          <a
            href="/"
            class="text-2xl md:text-3xl font-bold text-white hover:text-neutral-100 transition-colors drop-shadow-lg"
          >
            Apapacho Colón
          </a>
        </div>

        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center space-x-8">
          <a
            href="/#cabanas"
            class="text-white hover:text-neutral-100 transition-colors font-medium drop-shadow-md"
            >Cabañas</a
          >
          <a
            href="/#servicios"
            class="text-white hover:text-neutral-100 transition-colors font-medium drop-shadow-md"
            >Servicios</a
          >
          <a
            href="/galeria"
            class="text-white hover:text-neutral-100 transition-colors font-medium drop-shadow-md"
            >Galería</a
          >
          <a
            href="/#contacto"
            class="text-white hover:text-neutral-100 transition-colors font-medium drop-shadow-md"
            >Contacto</a
          >
          <a
            href="/#contacto"
            class="bg-white/20 backdrop-blur-sm text-white px-6 py-2 rounded-full hover:bg-white/30 transition-colors font-medium shadow-lg border-2 border-white"
          >
            Reservar
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden text-white hover:text-neutral-100 focus:outline-none"
          aria-label="Abrir menú"
        >
          <svg
            class="w-6 h-6 drop-shadow-md"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden bg-black/90 backdrop-blur-md border-t border-white/20"
    >
      <div class="px-4 pt-2 pb-4 space-y-2">
        <a
          href="/#cabanas"
          class="block px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors font-medium"
          >Cabañas</a
        >
        <a
          href="/#servicios"
          class="block px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors font-medium"
          >Servicios</a
        >
        <a
          href="/galeria"
          class="block px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors font-medium"
          >Galería</a
        >
        <a
          href="/#contacto"
          class="block px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors font-medium"
          >Contacto</a
        >
        <a
          href="/#contacto"
          class="block mx-3 mt-4 px-3 py-2 bg-white/20 backdrop-blur-sm text-white text-center rounded-full hover:bg-white/30 transition-colors font-medium shadow-lg border-2 border-white"
        >
          Reservar
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero con Video de Fondo a Pantalla Completa -->
  <div class="relative h-full w-full overflow-hidden">
    <!-- Video de fondo -->
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/videos/video1080_optimizado.webm" type="video/webm" />
      <source src="/videos/video1080_optimizado.mp4" type="video/mp4" />
    </video>

    <!-- Overlay oscuro -->
    <div class="absolute inset-0 bg-black/40"></div>

    <!-- Contenido del Hero -->
    <div
      class="absolute inset-0 flex items-center justify-center text-center px-4 z-10"
    >
      <div class="max-w-3xl">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 drop-shadow-lg"
        >
          Tu Refugio en la Naturaleza
        </h1>
        <p class="text-lg md:text-xl text-white/90 mb-8 drop-shadow-md">
          Descubre la tranquilidad en nuestras cabañas rodeadas de naturaleza
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/galeria"
            class="inline-block bg-neutral-100 text-accent-700 px-8 py-3 rounded-full font-semibold hover:bg-primary-500 hover:text-white transition-colors shadow-lg"
          >
            Ver Cabañas
          </a>
          <a
            href="/#contacto"
            class="inline-block bg-white/20 backdrop-blur-sm text-white px-8 py-3 rounded-full font-semibold hover:bg-white/30 transition-colors shadow-lg border-2 border-white"
          >
            Reservar Ahora
          </a>
        </div>
      </div>
    </div>

    <!-- Indicador de Scroll -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
      <svg class="w-6 h-6 text-white drop-shadow-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</header>

<script>
  // Mobile Menu Toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    // Cerrar menú al hacer clic en un enlace
    const mobileLinks = mobileMenu.querySelectorAll("a");
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
      });
    });
  }

  // Navbar scroll effect
  const navbar = document.getElementById("navbar");
  
  if (navbar) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 100) {
        navbar.classList.add("bg-neutral-50/95", "backdrop-blur-sm", "shadow-md");
        // Cambiar colores del navbar cuando tiene fondo
        const logo = navbar.querySelector("a[href='/']");
        const links = navbar.querySelectorAll("a:not([href='/'])");
        
        if (logo) {
          logo.classList.remove("text-white", "hover:text-neutral-100");
          logo.classList.add("text-accent-700", "hover:text-primary-600");
        }
        
        links.forEach((link) => {
          if (link.classList.contains("border-white")) {
            // Botón de reservar
            link.classList.remove("bg-white/20", "border-white", "text-white", "hover:bg-white/30");
            link.classList.add("bg-primary-500", "hover:bg-primary-600");
          } else {
            // Links normales
            link.classList.remove("text-white", "hover:text-neutral-100");
            link.classList.add("text-accent-700", "hover:text-primary-600");
          }
        });
      } else {
        navbar.classList.remove("bg-neutral-50/95", "backdrop-blur-sm", "shadow-md");
        // Restaurar colores transparentes
        const logo = navbar.querySelector("a[href='/']");
        const links = navbar.querySelectorAll("a:not([href='/'])");
        
        if (logo) {
          logo.classList.remove("text-accent-700", "hover:text-primary-600");
          logo.classList.add("text-white", "hover:text-neutral-100");
        }
        
        links.forEach((link) => {
          if (link.classList.contains("bg-primary-500")) {
            // Botón de reservar
            link.classList.remove("bg-primary-500", "hover:bg-primary-600");
            link.classList.add("bg-white/20", "border-white", "text-white", "hover:bg-white/30");
          } else {
            // Links normales
            link.classList.remove("text-accent-700", "hover:text-primary-600");
            link.classList.add("text-white", "hover:text-neutral-100");
          }
        });
      }
    });
  }
</script>
