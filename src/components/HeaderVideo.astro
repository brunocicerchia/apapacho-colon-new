<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.3s ease-out;
  }
</style>

<script>
  // Modal functionality
  const modal = document.getElementById("reservation-modal");
  const modalOverlay = document.getElementById("modal-overlay");
  const closeModalBtn = document.getElementById("close-modal");
  const openModalButtons = document.querySelectorAll(".open-reservation-modal");

  function openModal(e: Event) {
    e.preventDefault();
    if (modal) {
      modal.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    }
  }

  function closeModal() {
    if (modal) {
      modal.classList.add("hidden");
      document.body.style.overflow = "";
    }
  }

  // Open modal
  openModalButtons.forEach(button => {
    button.addEventListener("click", openModal);
  });

  // Close modal
  if (closeModalBtn) {
    closeModalBtn.addEventListener("click", closeModal);
  }
  
  if (modalOverlay) {
    modalOverlay.addEventListener("click", closeModal);
  }

  // Close with ESC key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && modal && !modal.classList.contains("hidden")) {
      closeModal();
    }
  });

  // Mobile Menu Toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });

    // Cerrar men칰 al hacer clic en un enlace
    const mobileLinks = mobileMenu.querySelectorAll("a");
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
      });
    });
  }

  // Navbar scroll effect
  const navbar = document.getElementById("navbar");
  const mobileMenuDiv = document.getElementById("mobile-menu");
  
  if (navbar && mobileMenuDiv && mobileMenuButton) {
    const updateNavbarStyles = () => {
      const isScrolled = window.scrollY > 100;
      
      if (isScrolled) {
        navbar.classList.remove("bg-black/30", "backdrop-blur-md", "md:bg-transparent", "md:backdrop-blur-none");
        navbar.classList.add("bg-neutral-50/95", "backdrop-blur-sm", "shadow-md");
        mobileMenuDiv.classList.remove("bg-white/20", "backdrop-blur-lg", "border-white/20");
        mobileMenuDiv.classList.add("bg-neutral-50/95", "backdrop-blur-sm", "border-t", "border-neutral-200");
        
        // Cambiar color del bot칩n m칩vil
        mobileMenuButton.classList.remove("text-white", "hover:text-neutral-100");
        mobileMenuButton.classList.add("text-accent-700", "hover:text-primary-600");
        
        // Cambiar colores del navbar cuando tiene fondo
        const logo = navbar.querySelector("a[href='/']");
        const desktopLinks = navbar.querySelectorAll(".hidden.md\\:flex a");
        const mobileLinks = mobileMenuDiv.querySelectorAll("a");
        
        if (logo) {
          logo.classList.remove("text-white", "hover:text-neutral-100");
          logo.classList.add("text-accent-700", "hover:text-primary-600");
        }
        
        desktopLinks.forEach((link) => {
          if (link.classList.contains("border-white")) {
            link.classList.remove("bg-white/20", "border-white", "text-white", "hover:bg-white/30");
            link.classList.add("bg-primary-500", "hover:bg-primary-600", "text-white", "border-primary-500");
          } else {
            link.classList.remove("text-white", "hover:text-neutral-100");
            link.classList.add("text-accent-700", "hover:text-primary-600");
          }
        });
        
        // Cambiar colores del men칰 m칩vil
        mobileLinks.forEach((link, index) => {
          if (index === mobileLinks.length - 1) {
            // Bot칩n de reservar
            link.classList.remove("bg-white/20", "border-white", "text-white", "hover:bg-white/30");
            link.classList.add("bg-primary-500", "hover:bg-primary-600", "text-white", "border-2", "border-primary-500");
          } else {
            // Links normales
            link.classList.remove("text-white");
            link.classList.add("text-accent-700");
          }
        });
      } else {
        navbar.classList.remove("bg-neutral-50/95", "backdrop-blur-sm", "shadow-md");
        navbar.classList.add("bg-black/30", "backdrop-blur-md", "md:bg-transparent", "md:backdrop-blur-none");
        mobileMenuDiv.classList.remove("bg-neutral-50/95", "backdrop-blur-sm", "border-neutral-200");
        mobileMenuDiv.classList.add("bg-white/20", "backdrop-blur-lg", "border-t", "border-white/20");
        
        // Restaurar color del bot칩n m칩vil
        mobileMenuButton.classList.remove("text-accent-700", "hover:text-primary-600");
        mobileMenuButton.classList.add("text-white", "hover:text-neutral-100");
        
        // Restaurar colores transparentes
        const logo = navbar.querySelector("a[href='/']");
        const desktopLinks = navbar.querySelectorAll(".hidden.md\\:flex a");
        const mobileLinks = mobileMenuDiv.querySelectorAll("a");
        
        if (logo) {
          logo.classList.remove("text-accent-700", "hover:text-primary-600");
          logo.classList.add("text-white", "hover:text-neutral-100");
        }
        
        desktopLinks.forEach((link) => {
          if (link.classList.contains("bg-primary-500")) {
            link.classList.remove("bg-primary-500", "hover:bg-primary-600", "border-primary-500");
            link.classList.add("bg-white/20", "border-white", "text-white", "hover:bg-white/30");
          } else {
            link.classList.remove("text-accent-700", "hover:text-primary-600");
            link.classList.add("text-white", "hover:text-neutral-100");
          }
        });
        
        // Restaurar colores del men칰 m칩vil
        mobileLinks.forEach((link, index) => {
          if (index === mobileLinks.length - 1) {
            // Bot칩n de reservar
            link.classList.remove("bg-primary-500", "hover:bg-primary-600", "border-primary-500");
            link.classList.add("bg-white/20", "border-2", "border-white", "text-white", "hover:bg-white/30");
          } else {
            // Links normales
            link.classList.remove("text-accent-700");
            link.classList.add("text-white");
          }
        });
      }
    };
    
    // Ejecutar al cargar la p치gina
    updateNavbarStyles();
    
    // Ejecutar al hacer scroll
    window.addEventListener("scroll", updateNavbarStyles);
  }
</script>
